{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",

  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently -k -r \"npm:dev\" \"wait-on tcp:5173 && electron .\"",
    "build:web": "vite build",
    "build:electron": "vite build --mode electron && electron-builder --win --x64",
    "preview": "vite preview",
    "lint": "eslint ."
  },

  "dependencies": {
    "axios": "^1.13.2",
    "express": "^5.2.1",
    "framer-motion": "^12.25.0",
    "http-proxy-middleware": "^3.0.5",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sweetalert2": "^11.26.17",
    "universal-cookie": "^8.0.1"
  },

  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0",
    "wait-on": "^9.0.3",
    "workbox-window": "^7.4.0"
  },

  "build": {
    "appId": "com.qa.examination",
    "productName": "QA Examination Platform",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "node_modules/express/**/*",
      "node_modules/http-proxy-middleware/**/*"
    ],
    "asarUnpack": [
      "dist/**/*",
      "node_modules/express/**/*",
      "node_modules/http-proxy-middleware/**/*"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "win": {
      "target": ["nsis"],
      "icon": "public/icon-512.png"
    },
    "directories": {
      "output": "release"
    }
  }
}